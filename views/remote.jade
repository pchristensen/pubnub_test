doctype 5
html
  head
    title= "REMOTE"
    script(type='text/javascript', src='http://code.jquery.com/jquery-1.9.1.min.js')
    script(type='text/javascript', src='http://cdn.pubnub.com/pubnub-3.4.2.min.js')
    script(type='text/javascript', src='/socket.io/socket.io.js')
  body
    | remote

    input#up(type="button", value="UP")
    input#down(type="button", value="DOWN")
    input#left(type="button", value="LEFT")
    input#right(type="button", value="RIGHT")
    input#forward(type="button", value="FORWARD")
    input#backward(type="button", value="BACKWARD")

    br

    | Pubnub latency:
    #pubnub_latency

    | Server/socket.io latency:
    #server_latency

    | Command
    #command= cmd

    script(type='text/javascript', src='/javascripts/remote.js')
